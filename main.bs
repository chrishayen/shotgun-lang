// Main entry point for the self-hosted Shotgun compiler
//
// Parser test driver - reads a file and prints the parsed AST.

uses: compiler

fn main() {
    // Default test file, or could be changed to read from args
    filename := "tests/basic/hello.bs"

    source := read_file(filename) or return

    print("Parsing: {filename}")
    print("---")

    parser := new_parser(source, filename)
    program := parser.parse_program()

    print(program.show())
}
