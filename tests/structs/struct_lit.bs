// Test: Struct literal instantiation
Person :: struct {
    name str
    age int
}

fn test_struct_literal_alice() {
    Person alice = Person { name: "Alice", age: 30 }
    assert_eq(alice.name, "Alice")
    assert_eq(alice.age, 30)
}

fn test_struct_literal_bob() {
    Person bob = Person { name: "Bob", age: 25 }
    assert_eq(bob.name, "Bob")
    assert_eq(bob.age, 25)
}
