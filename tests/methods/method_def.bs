// Test: Method definition with self
Person :: struct {
    name str
    age int
}

Person :: greet(self) str {
    return f"Hello, I am {self.name}"
}

Person :: is_adult(self) bool {
    if self.age >= 18 {
        return true
    }
    return false
}

fn test_greet_method() {
    Person p = Person { name: "Alice", age: 30 }
    str greeting = p.greet()
    assert_eq(greeting, "Hello, I am Alice")
}

fn test_is_adult_true() {
    Person p = Person { name: "Alice", age: 30 }
    assert_true(p.is_adult())
}

fn test_is_adult_false() {
    Person kid = Person { name: "Bob", age: 10 }
    assert_false(kid.is_adult())
}
