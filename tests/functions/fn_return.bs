// Test: Functions with return values
fn double(int x) int {
    return x * 2
}

fn make_greeting(str name) str {
    return f"Hello, {name}!"
}

fn is_positive(int n) bool {
    if n > 0 {
        return true
    }
    return false
}

fn test_double() {
    int d = double(21)
    assert_eq(d, 42)
}

fn test_make_greeting() {
    str g = make_greeting("World")
    assert_eq(g, "Hello, World!")
}

fn test_is_positive_true() {
    bool pos = is_positive(5)
    assert_true(pos)
}

fn test_is_positive_false() {
    bool neg = is_positive(-5)
    assert_false(neg)
}
