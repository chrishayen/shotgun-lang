// Test: Wildcard pattern in match expression
Option :: variant {
    Some { value int }
    None
}

fn get_or_default(Option o, int default) int {
    return match o {
        Option.Some { value: v } -> v,
        _ -> default
    }
}

fn main {
    Option has_val = Option.Some { value: 42 }
    Option no_val = Option.None

    int a = get_or_default(has_val, 0)
    int b = get_or_default(no_val, 99)

    print("Some: {a}, None: {b}")
}
